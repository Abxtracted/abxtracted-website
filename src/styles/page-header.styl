@require '_variables'
@require '_mixins'

.page-header
  padding 220px 0
  color $color-white
  text-align center
  bg-gradient-vertical($color-purple, $color-blue-semi-dark)
  &.page-header-small
    padding 165px 0 110px
  h1
    margin 0 auto
    max-width 690px
  .button
    margin 30px 25px 0
    min-width 200px
    opacity 0
    transition(all, 300ms)

+breakpoint('xs')
  .page-header
    padding 165px 0 220px
    &.page-header-small
      padding 165px 0 110px
    h1
      padding 0 25px
