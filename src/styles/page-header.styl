@require '_variables'
@require '_mixins'

$page-header-placeholder-color = alpha($color-white, .5)

.page-header
  padding 220px 0
  color $color-white
  text-align center
  bg-gradient-vertical($color-purple, $color-blue-semi-dark)
  &.page-header-small
    padding 140px 0 100px
  h1
    margin 0 auto
    max-width 690px

+breakpoint('xs')
  .page-header
    padding 140px 0 100px
    h1
      padding 0 25px
